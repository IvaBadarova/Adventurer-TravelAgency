@{
}

@model List<TravelAgencyAdminApplication.Models.Order>

<div class="container mt-5">
    <div class="container">
        <div class="mb-2">
            <a asp-controller="Order" asp-action="ExportAllOrders" class="btn btn-outline-secondary">Export Orders</a>
        </div>

        <div class="row m-5">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th>
                            #
                        </th>
                        <th>
                            Customer details
                        </th>
                        <th>
                            Number of pakcages in order
                        </th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.Count(); i++)
                    {
                        var item = Model[i];
                        <tr>
                            <td>@(i + 1)</td>
                            <td>
                                @item.Customer.FirstName
                            </td>

                            <td>
                                @item.PackageInOrders.Count()
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">View Order</a>
                            </td>
                            <td>
                                <a asp-action="CreateInvoice" asp-route-id="@item.Id" class="btn btn-secondary">Create Invoice</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>