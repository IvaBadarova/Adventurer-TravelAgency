@model TravelAgency.Domain.Domain.Itinerary

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Itinerary</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Day" class="control-label"></label>
                <input asp-for="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransportationDetails" class="control-label">Transportation Details</label>
                <input asp-for="TransportationDetails" class="form-control" />
                <span asp-validation-for="TransportationDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccomodationDetails" class="control-label">Accommodation Details</label>
                <input asp-for="AccomodationDetails" class="form-control" />
                <span asp-validation-for="AccomodationDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PackageId" class="control-label">Package</label>
                <select asp-for="PackageId" class="form-control" asp-items="ViewBag.PackageId"></select>
            </div>

            <div class="form-group">
                <label for="activitiesIds">Select Activities</label>
                <select id="activitiesIds" name="activitiesIds" class="form-control" multiple>
                    @foreach (var activity in ViewBag.Activities as List<TravelAgency.Domain.Domain.Activity>)
                    {
                        <option value="@activity.Id">@activity.Name</option>
                    }
                </select>
            </div>

            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
