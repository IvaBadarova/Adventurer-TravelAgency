@model TravelAgency.Domain.Domain.Itinerary

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Itinerary</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Day)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Day)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TransportationDetails)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TransportationDetails)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AccomodationDetails)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AccomodationDetails)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TravelPackage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TravelPackage.Name)
        </dd>
    </dl>
    
    <h5>Activities</h5>
    @if (Model.ActivityInItineraries != null && Model.ActivityInItineraries.Any())
    {
        <ul>
            @foreach (var activityInItinerary in Model.ActivityInItineraries)
            {
                <li>
                    @activityInItinerary.Activity?.Name
                </li>
            }
        </ul>
    }
    else
    {
        <p>No activities are associated with this itinerary.</p>
    }

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
